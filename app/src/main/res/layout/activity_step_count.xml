<!--                android:text="Steps"-->
<!--                android:textColor="#292727"-->
<!--                android:textSize="24sp"-->
<!--                android:textStyle="bold" />-->
            <TextView
                android:id="@+id/tvStepGoalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step Goal"
                android:textColor="#292727"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>


